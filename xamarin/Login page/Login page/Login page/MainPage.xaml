<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_page.MainPage">

    <StackLayout  VerticalOptions="Center" Margin="15">
        <Entry x:Name="emailEntry" Placeholder="e-mail@domain.com" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="loginButton" Text="Login" BackgroundColor="#3F84E5" TextColor="White" Clicked="loginButton_Clicked"/>
    </StackLayout>

</ContentPage>
